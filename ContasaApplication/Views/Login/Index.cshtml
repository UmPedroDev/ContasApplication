@using ContasApplication.Models;
@model Usuarios;
@{
	ViewData["Title"] = "Login Page";
}

<body>
	<div class="container">
		<div class="form-box login">
			<form asp-controller="Login" asp-action="RotaLoginRegistro" method="post">
				<h1>Login</h1>
				<div class="input-box">
					<input type="text" asp-for="Usuario" placeholder="Usuário"  />
					<i class="bx bxs-user"></i>
				</div>
				<div class="input-box">
					<input type="password" asp-for="Senha" placeholder="Senha" />
					<input style="display: none" asp-for="page" value="0" />
					<i class='bx bxs-lock-alt'></i>
				</div>
				<div class="forgot-link">
					<a href="#">Recuperar senha</a>
				</div>
				<button type="submit" class="btn">Login</button>
			</form>
		</div>

		<div class="form-box register">
			<form asp-controller="Login" asp-action="RotaLoginRegistro" method="post">
				<h1>Registre-se</h1>
				<div class="input-box">
					<input type="text" asp-for="Usuario" placeholder="Usuário"  />
					<i class="bx bxs-user"></i>
				</div>
				<div class="input-box">
					<input type="email" asp-for="Email" placeholder="Email"  />
					<i class='bx bxs-envelope'></i>
				</div>

				<div class="input-box">
					<input type="password" asp-for="Senha" placeholder="Senha"  />
					<input style="display: none" asp-for="page" value="1" />
					<i class='bx bxs-lock-alt'></i>
				</div>

				<div class="forgot-link">
					<a href="#">Recuperar senha</a>
				</div>
				<button type="submit" class="btn">Registrar</button>
			</form>
		</div>

		<div class="toggle-box">
			<div class="toggle-panel toggle-left">
				<h1>Olá, bem-vindo!</h1>
				<p>Ainda não tem uma conta?</p>
				<button class="btn register-btn">registre-se</button>
			</div>

			<div class="toggle-panel toggle-right">
				<h1>Bem vindo de volta!</h1>
				<p>Já tem uma conta?</p>
				<button class="btn login-btn">Login</button>
			</div>
		</div>
	</div>

	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Erro</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<p id="mensagemErro">@TempData["MensagemErro"]</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
				</div>
			</div>
		</div>
	</div>

	<link rel="stylesheet" href="~/css/loginIndex.css" />
	<script src="~/js/LoginIndex.js"></script>
</body>


